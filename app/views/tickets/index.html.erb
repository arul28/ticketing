<p style="color: green"><%= notice %></p>

<h1>Tickets</h1>

<div id="tickets">
  <% @tickets.each do |ticket| %>
    <%= render ticket %>
    <p>
      <%= link_to "Show this ticket", ticket %>
    </p>
    <% if Date.today() < ticket.train.arrival_date %>
      <%= link_to "Review",  new_review_path(passenger_id: ticket.passenger_id, train_id: ticket.train_id)%>
    <% end %>
  <% end %>
</div>

<br></br>
